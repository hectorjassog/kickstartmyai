# Test AI Project Environment Configuration
# Copy this file to .env and update with your actual values

# Basic Configuration
PROJECT_NAME=Test AI Project
DEBUG=false
API_V1_STR=/api/v1
SECRET_KEY=your-super-secret-key-here-change-this

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_USER=test-ai-project_user
POSTGRES_PASSWORD=your-database-password
POSTGRES_DB=test-ai-project_db
POSTGRES_PORT=5432
# Alternative: Use full DATABASE_URL
# DATABASE_URL=postgresql://test-ai-project_user:password@localhost:5432/test-ai-project_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:8080

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=480
REFRESH_TOKEN_EXPIRE_MINUTES=43200

# AI Provider API Keys (Optional)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GEMINI_API_KEY=your-gemini-api-key

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=
LOG_SAMPLING_RATE=1.0

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Email Configuration (Optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_MONITORING=false
